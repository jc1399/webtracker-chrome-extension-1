{
  "manifest_version": 2,
  "name": "Web Time Tracker",
  "version": "0.0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "idle",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
	    "16": "images/Time.png"
      }
  }
}
